<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#D4F0FF"
        app:cardElevation="5dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/textviewtenhp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Học Phần"
                android:textColor="#2196F3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textviewmahp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewtenhp"
                android:layout_marginLeft="20dp"
                android:text="Mã học phần:  "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewtenhp"
                android:layout_alignLeft="@+id/textviewdchu"
                android:text="500231"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewdiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewmahp"
                android:layout_marginLeft="20dp"
                android:text="Điểm chữ "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewdchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewma"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/textviewdiem"
                android:text="A "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewsotc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewdiem"
                android:layout_marginLeft="20dp"
                android:text="Số tin chỉ: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewtinchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewdchu"
                android:layout_alignLeft="@+id/textviewdchu"
                android:text="19 "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewdiemcuoiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewsotc"
                android:layout_marginLeft="20dp"
                android:text="Điểm tổng kết: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewdiemtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewsotc"
                android:layout_alignLeft="@+id/textviewdchu"
                android:text="8.0 "
                android:textColor="@color/black"
                android:textSize="16sp" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>